<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/actividad_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroud">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="56dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_sportives_titans_3" />

    <TextView
        android:id="@+id/tv_actividad"
        android:layout_width="145dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="Nombre de la actividad"
        android:textColor="@color/AppThemeBaseColor"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />

    <TextView
        android:id="@+id/tv_fecha_actividad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="00/00/00"
        android:textColor="@android:color/holo_orange_light"
        app:layout_constraintBottom_toBottomOf="@+id/tv_actividad"
        app:layout_constraintStart_toEndOf="@+id/tv_actividad"
        app:layout_constraintTop_toTopOf="@+id/tv_actividad" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="61dp"
        android:layout_height="63dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_fecha_actividad"
        app:layout_constraintStart_toEndOf="@+id/tv_fecha_actividad"
        app:layout_constraintTop_toTopOf="@+id/tv_fecha_actividad"
        app:srcCompat="@drawable/cosa_rara_naranja" />
</androidx.constraintlayout.widget.ConstraintLayout>